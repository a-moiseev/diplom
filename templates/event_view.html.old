{% extends "base.html" %}

{% block title %}Встреча{% endblock %}

{% block content %}
    <h1>{{ event.series }}</h1>
    <dt>Руководитель:</dt>
    <dd><a href="/accounts/profile/{{ event.teacher.user.id }}/">{{ event.teacher }}</a></dd>
    <dt>Дата:</dt>
    <dd>{{ event.date_and_time.date }}</dd>
    <dt>Время:</dt>
    <dd>{{ event.date_and_time|date:"G:i" }}&mdash;{{ event.endtime|time:"G:i" }}</dd>
    
    {% if errors %}    
        <p class="error">{{errors}}</p>
    {% endif %}
    
    {% if user.student %}
        <p><a href="/event/{{event.id}}/join/">Записаться на встречу</a></p>
    {% endif %}
    
    {% if event_students_time %}
        <dt>Записаны на встречу:</dt>
        <ul>
        {% for st, t in event_students_time %}
            <li><a href="/accounts/profile/{{ st.student.user.id }}/">{{ st.student }}</a>, {{ t|date:"G:i" }}</li>
        {% endfor %}
        </ul>
    {% else %}
        <p>На встречу никто не записан.</p>
    {% endif %}
    
{% endblock %}